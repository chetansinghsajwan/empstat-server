{
    "compilerOptions": {
        "target": "es2016",
        "module": "commonjs",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "paths": {
            "@app": ["./src/app"],
            "@routes/*": ["./src/routes/*"],
            "@routes": ["./src/routes"],
            "@controllers/*": ["./src/controllers/*"],
            "@schemas/*": ["./src/schemas/*"],
            "@utils/*": ["./src/utils/*"],
            "@modals/*": ["./src/modals/*"],
            "@modals": ["./src/modals"],
            "@middlewares/*": ["./src/middlewares/*"]
        }
    }
}
